@model Project
@{
    ViewData["Title"] = "Project - create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Entity</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .create-entity-container {
            background-color: #f9f9f9;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
            margin: 50px auto;
            padding: 30px;
            box-sizing: border-box;
            transition: box-shadow 0.3s;
        }

            .create-entity-container:hover {
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 8px;
                display: block;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #e5e5e5;
                border-radius: 8px;
                box-sizing: border-box;
            }

            .form-group select {
                width: 100%;
                padding: 10px;
                border: 1px solid #e5e5e5;
                border-radius: 8px;
                box-sizing: border-box;
            }

        .submit-btn {
            background: linear-gradient(to right, #a5c6e6, #e6f1f9);
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .submit-btn:hover {
                background: linear-gradient(to right, #7aa9c3, #b7d4ea);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form class="create-entity-container" asp-action="Update" method="post">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required asp-for="Name">
                    </div>

                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" rows="4" required asp-for="Description"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="deadline">Deadline:</label>
                        <input type="date" id="deadline" name="deadline" required asp-for="Deadline">
                    </div>

                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select id="status" name="status" required asp-for="Status">
                            <option value="in-progress">In Progress</option>
                            <option value="completed">Completed</option>
                            <option value="pending">Blocked</option>
                        </select>
                    </div>

                    <button type="submit" class="submit-btn">Update Entity</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js CDN (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
