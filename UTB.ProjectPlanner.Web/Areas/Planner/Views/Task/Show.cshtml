@model ProjectTask
@{
    ViewData["Title"] = "Task - show";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entity Index</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .entity-index-container {
            background-color: #f9f9f9;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            overflow: hidden;
            margin: 50px auto;
            padding: 30px;
            box-sizing: border-box;
            transition: box-shadow 0.3s;
        }

            .entity-index-container:hover {
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            }

        .entity {
            border-bottom: 2px solid #e5e5e5;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .entity-info {
            margin-bottom: 10px;
        }

        .update-delete-container {
            display: flex;
            justify-content: space-between;
        }

            .update-delete-container button {
                padding: 10px 15px;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s, color 0.3s;
            }

        .update-container {
            background: linear-gradient(to right, #a5c6e6, #e6f1f9);
            color: #fff;
        }

        .delete-container {
            background: linear-gradient(to right, #e6b9d4, #f7d9ec);
            color: #fff;
        }

        .project-container {
            background: linear-gradient(to right, #ffb366, #ffd699);
            color: #fff;
        }

        .update-delete-container button:hover {
            background: #f0f0f0;
            color: #333;
        }

        .project-container:hover {
            background: #ffcc80;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="entity-index-container">
                    <div class="entity">
                        <div class="entity-info">
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Description:</strong> @Model.Description</p>
                            <p><strong>Deadline:</strong> @Model.Deadline</p>
                            <p><strong>Status:</strong> @Model.Status</p>
                        </div>

                        <div class="update-delete-container">
                            <a asp-controller="Task" asp-action="Update" asp-route-Id="@Model.Id">
                                <div class="update-container">Update</div>
                            </a>
                            <a asp-controller="Project" asp-action="Show" asp-route-Id="@Model.ProjectId">
                                <div class="project-container">Project</div>
                            </a>
                            <a asp-controller="Task" asp-action="Delete" asp-route-Id="@Model.Id">
                                <div class="delete-container">Delete</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js CDN (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
