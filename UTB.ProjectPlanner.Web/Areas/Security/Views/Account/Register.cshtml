@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <title>Centered Box</title>
    <style>
        /* Optional: Add some styling for the centered box */
        .center-box {
            background-color: #EFD4CB;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 600px;
            height: auto;
        }

        .box-item {
            margin-bottom: 5px;
        }

        /* Ensure full height of the viewport */
        html, body {
            height: 100%;
            margin: 0; /* Remove default body margin */
            background-color: #F3EFEF;
        }

        /* Center content vertically and horizontally */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column; /* Stack items vertically */
        }

        header {
            background-color: #EFD4CB;
            text-align: center;
            padding: 5px;
            width: 100%; /* Take up the full width */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <header class="fixed-top">
        <h1 class="display-4">Project Planner</h1>
    </header>

    <div class="center-box">
        <form asp-action="Register" method="post" class="form-signup">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Register</h1>

            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Username" type="text" id="user-name" class="form-control box-item" placeholder="Username" autofocus="">
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="FirstName" type="text" id="first-name" class="form-control box-item" placeholder="First name" autofocus="">
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input asp-for="LastName" type="text" id="last-name" class="form-control box-item" placeholder="Last name" autofocus="">
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input asp-for="Email" type="email" id="user-email" class="form-control box-item" placeholder="Email address" autofocus="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Phone" type="tel" id="user-phone" class="form-control box-item" placeholder="Phone" autofocus="">
            <span asp-validation-for="Phone" class="text-danger"></span>
            <input asp-for="Password" type="password" id="user-pass" class="form-control box-item" placeholder="Password" autofocus="">
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="RepeatedPassword" type="password" id="user-repeatpass" class="form-control box-item" placeholder="Repeat Password" autofocus="">
            <span asp-validation-for="RepeatedPassword" class="text-danger"></span>

            <div class="text-center box-item">
                <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Sign Up</button>
            </div>
            <a asp-action="Login" class="btn btn-success btn-block text-white" type="button" id="btn-signin"><i class="fas fa-sign-in-alt"></i> Sign in to Existing Account</a>
        </form>
    </div>

    <!-- Bootstrap JS and Popper.js (optional, for Bootstrap components) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}